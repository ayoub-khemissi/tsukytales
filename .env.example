# ============================================================
# Tsuky Tales — Environment Variables
# ============================================================
# Copy this file to .env.local and fill in the values.

# --- Database (MySQL 8) ---
DB_HOST="localhost"
DB_PORT="3306"
DB_USER="root"
DB_PASS=""
DB_NAME="tsukytales"
DB_POOL_LIMIT="10"             # Per-worker pool size (prod: 75 with 8 PM2 workers = 600 total)
DB_QUEUE_LIMIT="0"             # 0 = unlimited, prod: 200

# --- NextAuth ---
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET=""         # openssl rand -base64 32

# --- Google OAuth ---
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# --- Stripe ---
STRIPE_PUBLISHABLE_KEY="pk_test_xxx"
STRIPE_SECRET_KEY="sk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"
STRIPE_ACCOUNT_ID=""          # acct_xxx — for Stripe Dashboard links

# --- Boxtal (Shipping) ---
BOXTAL_CLIENT_ID=""
BOXTAL_CLIENT_SECRET=""
BOXTAL_WEBHOOK_SECRET=""

# Boxtal Sender Info
BOXTAL_SENDER_FIRST_NAME=""
BOXTAL_SENDER_LAST_NAME=""
BOXTAL_SENDER_EMAIL=""
BOXTAL_SENDER_PHONE=""
BOXTAL_SENDER_STREET=""
BOXTAL_SENDER_POSTAL_CODE=""
BOXTAL_SENDER_CITY=""
BOXTAL_SENDER_COUNTRY="FR"

# --- Mail (SMTP) ---
MAILER_DSN="smtp://user:pass@host:587"   # smtps:// for port 465
MAIL_FROM="Tsuky Tales <contact@tsukytales.com>"

# --- App ---
BASE_URL="https://tsukytales.com"
NEXT_PUBLIC_BASE_URL="https://tsukytales.com"
CONTACT_EMAIL="contact@tsukytales.com"

# --- Redis (optional — app works 100% without it) ---
REDIS_URL="redis://127.0.0.1:6379"

# --- Instagram ---
BEHOLD_FEED_URL=""
